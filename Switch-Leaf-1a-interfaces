auto nas01-40
iface nas01-40
   bond-slaves swp52
   bridge-access 10
   clag-id 52
   mtu 9216

auto nas02-40
iface nas02-40
   bond-slaves swp53
   bridge-access 10
   clag-id 53
   mtu 9216 

#  MLAG/CLAG config...
auto peerlink
iface peerlink
    bond-slaves swp13 swp14
    mtu 9216

auto peerlink.4094
iface peerlink.4094
    address 169.254.255.1
    netmask 255.255.255.0
    clagd-priority 4096
    clagd-peer-ip 169.254.255.2
    clagd-backup-ip 10.0.0.12
    clagd-sys-mac 44:38:39:ff:00:01
    mtu 9216

# bridge to hosts
auto swp1
iface swp1
    mtu 9216

auto node1
iface node1
    bond-slaves swp1
    clag-id 1
    mtu 9216

auto swp2
iface swp2
    mtu 9216

auto node2
iface node2
    bond-slaves swp2
    clag-id 2
    mtu 9216

auto swp3
iface swp3
    mtu 9216

auto node3
iface node3
    bond-slaves swp3
    clag-id 3
    mtu 9216 

